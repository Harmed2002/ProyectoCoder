<div class="container mt-4">
    <h2>Product List</h2>
    <table class="table table-striped table-bordered">
        <thead class="thead">
            <tr>
                <th>id</th>
                <th>code</th>
                <th>title</th>
                <th>description</th>
                <th>category</th>
                <th>price</th>
                <th>stock</th>
                <th>status</th>
                <th>thumbnail</th>
            </tr>
        </thead>
        <tbody id="tableContent">
            {{#each products}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.code}}</td>
                <td>{{this.title}}</td>
                <td>{{this.description}}</td>
                <td>{{this.category}}</td>
                <td>{{this.price}}</td>
                <td>{{this.stock}}</td>
                <td>{{this.status}}</td>
                <td>{{this.thumbnail}}</td>
            </tr>
            {{/each}}
        </tbody>
        <div id="paginationControls" class="d-flex justify-content-between">
            <button id="prevPage" class="btn btn-primary"><i class="bi bi-arrow-left"></i></button>
            <button id="nextPage" class="btn btn-primary"><i class="bi bi-arrow-right"></i></button>
        </div>
    </table>
</div>