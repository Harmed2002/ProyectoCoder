<div class="container">
    <div class="p-2 p-md-5 border rounded mt-5 col-md-6 mx-auto" style="background-color: #f8f9fa;">
        <h1 class="text-center mb-3">User Register</h1>
        <div class="card-body">
            <form name="" id="signUpForm">
                <div class="mb-3">
                    <label for="first_name" class="form-label">Name</label>
                    <input type="text" class="form-control" name="first_name" id="first_name" required>
                </div>
                <div class="mb-3">
                    <label for="last_name" class="form-label">Last Name</label>
                    <input type="text" class="form-control" name="last_name" id="last_name" required>
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label">Age</label>
                    <input type="number" class="form-control" name="age" id="age" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label">Email</label>
                    <input type="email" class="form-control" name="email" id="email" aria-describedby="emailHelp" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" name="password" id="password" required>
                </div>
                <div class="d-grid">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </div>
            </form>
            <div class="mt-3 text-center">
                <span class="fs-6 text-secondary">Â¿Do you already have an account?</span>
                <a class="border-bottom border-secondary text-secondary" href="/login">Sign In!</a>
            </div>
        </div>
    </div>
</div>
